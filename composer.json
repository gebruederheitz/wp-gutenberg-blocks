{
    "name": "gebruederheitz/wp-gutenberg-blocks",
    "description": "Helps you get your blocks on the road",
    "type": "library",
    "license": "GPL-3.0-only",
    "autoload": {
        "psr-4": {
            "Gebruederheitz\\GutenbergBlocks\\": "Gebruederheitz/GutenbergBlocks/"
        }
    },
    "authors": [
        {
            "name": "Andreas Maros",
            "email": "andreas.maros@gebruederheitz.de"
        }
    ],
    "require": {
	    "php": ">=7.3",
        "symfony/yaml": "^5.3",
        "gebruederheitz/simple-singleton": "^1.0"
    },
    "scripts": {
        "lint": "phpstan --memory-limit=2G analyse -c .phpstan.neon"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "wecodemore/wpstarter": "~2.0",
        "johnpbloch/wordpress-core": "6.6.*@stable"
    },
    "config": {
        "allow-plugins": {
            "johnpbloch/wordpress-core-installer": true
        }
    },
    "extra": {
        "wordpress-content-dir": ".wp/wordpress/wp-content",
        "wordpress-install-dir": ".wp/wordpress"
    }
}
